<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="24dp">

        <!-- Thông tin sinh viên -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="6dp"
            android:layout_marginBottom="16dp"
            android:backgroundTint="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/student_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SINH VIÊN: Nguyễn Văn A"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#222" />

                <TextView
                    android:id="@+id/student_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="MSSV: 123456"
                    android:layout_marginTop="4dp"
                    android:textColor="#666" />

                <TextView
                    android:id="@+id/student_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email: student@example.com"
                    android:layout_marginTop="2dp"
                    android:textColor="#666" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Danh sách môn học -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="6dp"
            android:backgroundTint="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="16dp"> <!-- Giảm padding xuống -->

                <TextView
                    android:id="@+id/tv_course_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:text="📘 Danh sách môn học"
                    android:textColor="#222"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_today_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="Thứ 4, 17/05/2025"
                    android:textColor="#888"
                    android:textSize="13sp" />

                <ExpandableListView
                    android:id="@+id/elv_subject_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clipToPadding="false"
                    android:divider="@android:color/darker_gray"
                    android:dividerHeight="0.5dp"
                    android:padding="0dp" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Thống kê đi học -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="6dp"
            android:backgroundTint="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="📊 Thống kê đi học"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#222" />

                <TextView
                    android:id="@+id/attend_day"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="Số buổi học: 10"
                    android:textColor="#555" />

                <TextView
                    android:id="@+id/absent_day"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="Số buổi vắng: 2"
                    android:textColor="#555" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Nút hành động -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            android:layout_marginBottom="16dp"
            android:backgroundTint="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:padding="12dp"
                android:weightSum="2">

                <!-- Nút Xem điểm -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_score"
                        android:contentDescription="Xem điểm" />

                    <TextView
                        android:id="@+id/btn_view_grades"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Xem điểm"
                        android:textSize="14sp"
                        android:textColor="#4CAF50"
                        android:layout_marginTop="4dp" />
                </LinearLayout>

                <!-- Nút Phản hồi -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_feedback"
                        android:contentDescription="Gửi phản hồi" />

                    <TextView
                        android:id="@+id/btn_feedback"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Phản hồi"
                        android:textSize="14sp"
                        android:textColor="#2196F3"
                        android:layout_marginTop="4dp" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Nút đăng xuất dạng text -->
        <Button
            android:id="@+id/btn_logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Đăng xuất"
            android:textAllCaps="false"
            android:textColor="#F44336"
            android:background="@android:color/transparent"
            android:layout_marginBottom="24dp"/>
    </LinearLayout>
</ScrollView>

<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- App theme mặc định -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#3F51B5</item>
        <item name="colorPrimaryVariant">#303F9F</item>
        <item name="colorOnPrimary">#FFFFFF</item>
        <item name="colorSecondary">#FF4081</item>
    </style>

    <!-- Style cho nút màu cam (số và dấu . %) -->
    <style name="OrangeButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:layout_rowWeight">1</item>
        <item name="android:background">#FF9800</item> <!-- Màu cam sáng hơn -->
        <item name="android:textColor">#000000</item> <!-- Màu chữ đen -->
        <item name="android:textSize">20sp</item>
    </style>

    <!-- Style cho nút màu xanh lá (các phép toán) -->
    <style name="GreenButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:layout_rowWeight">1</item>
        <item name="android:background">#81C784</item> <!-- Màu xanh lá sáng hơn -->
        <item name="android:textColor">#000000</item> <!-- Màu chữ đen -->
        <item name="android:textSize">20sp</item>
    </style>

    <!-- Style cho nút màu xanh dương (DEL và =) -->
    <style name="BlueButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:layout_rowWeight">1</item>
        <item name="android:background">#64B5F6</item> <!-- Màu xanh dương sáng hơn -->
        <item name="android:textColor">#000000</item> <!-- Màu chữ đen -->
        <item name="android:textSize">20sp</item>
    </style>

</resources>
